%div.panel{:class => resource_class.to_s.underscore}
  %h3 Notes
  %div.panel_contents
    %div.link_to_action
      = link_to "New Note", polymorphic_path([:admin, resource, :note], :action => :new)
    - if resource.notes.empty?
      %div
        There are no notes.
    - else
      %div.attributes_table
        %table{:border=>"0", :cellspacing=>"0",:cellpadding=>"0"}
          - resource.notes.all.each do |note|
            = row :note, :label => note.name, :value => note.body, :actions => link_to("Edit", polymorphic_path([:admin, resource, note], :action => :edit))
